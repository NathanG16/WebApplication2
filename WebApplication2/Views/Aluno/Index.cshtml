        <tr>
            <th scope="col">Matricula</th>
            <th scope="col">Nome</th>
            <th scope="col">Cpf</th>
            <th scope="col">Data de Nascimento</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>000001</td>
